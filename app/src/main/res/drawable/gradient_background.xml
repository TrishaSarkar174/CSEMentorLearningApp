<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#FF5733"
            android:endColor="#FFC300"
            android:type="linear" />
        </shape>
    </item>
    <item android:right="8dp" android:left="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#F0EDF2" />
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
